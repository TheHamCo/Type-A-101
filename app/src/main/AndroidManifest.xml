<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.dijam.michael.typea101">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyAppTheme">
        <activity android:name=".mainscreen.view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".modifytask.view.ModifyTaskActivity" />
        <activity android:name=".modifycurrenttask.view.ModifyCurrentTaskActivity" />
        <activity android:name=".taskdetail.view.TaskDetailActivity"/>
    </application>

</manifest>