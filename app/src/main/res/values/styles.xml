<resources>

    <!-- Base application theme. -->
    <style name="MyAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActionBarTheme" parent="Widget.AppCompat.Toolbar">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DialogButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DialogButtonStart" parent="DialogButton">
        <item name="android:layout_gravity">start|center_vertical</item>
    </style>

    <style name="DialogButtonCenter" parent="DialogButton">
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="DialogButtonEnd" parent="DialogButton">
        <item name="android:layout_gravity">end|center_vertical</item>
    </style>

    <style name="DialogBottomButtomFrame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="CardViewDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/lightThemeDivider</item>
    </style>

    <style name="DialogCardViewLLMainContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">top</item>

        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/current_task_cardview_padding</item>
        <item name="android:paddingRight">@dimen/current_task_cardview_padding</item>
        <item name="android:paddingTop">@dimen/current_task_cardview_padding</item>
    </style>

    <style name="CardViewContentFullPadding" parent="DialogCardViewLLMainContent">
        <item name="android:paddingBottom">@dimen/current_task_cardview_padding</item>
    </style>

    <style name="ClickableCardViewSection" parent="CardViewContentFullPadding">
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="DialogCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
    </style>

    <style name="ToolbarImageButton" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ToolbarTextButton" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.Widget.AppCompat.Toolbar.Title
        </item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ToolbarText">
        <item name="android:textAppearance">@style/TextAppearance.Widget.AppCompat.Toolbar.Title
        </item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="TagText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Small</item>
    </style>

    <style name="TaskNameText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Large</item>
    </style>

    <style name="InlineCardViewDivider" parent="CardViewDivider">
        <item name="android:layout_marginBottom">@dimen/cardview_divider_margin</item>
        <item name="android:layout_marginTop">@dimen/cardview_divider_margin</item>
    </style>

    <style name="ButtonCardViewDivider" parent="CardViewDivider">
        <item name="android:layout_marginTop">@dimen/cardview_divider_margin</item>
    </style>

    <style name="StartEndTimeText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="FabLayoutDummy">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="small_fab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top|end</item>
        <item name="android:layout_margin">@dimen/small_fab_margin</item>
    </style>

    <style name="Label">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/fab_label_bg</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FabLabel" parent="Label">
        <item name="android:layout_marginRight">70dp</item>
        <item name="android:layout_marginEnd">70dp</item>
    </style>

    <style name="FabLabelDummy">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="SmallFab">
        <item name="android:visibility">gone</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_marginEnd">@dimen/small_fab_margin</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">@dimen/small_fab_margin</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

</resources>
